{
  "version": 2,
  "settings": {
    "layout": {
      "contentSize": "1120px",
      "wideSize": "1400px"
    },
    "color": {
      "palette": [
        { "name": "Black", "slug": "black", "color": "#2c2c2c" },
        { "name": "Surface", "slug": "surface", "color": "#121212" },
        { "name": "Surface 2", "slug": "surface-2", "color": "#181818" },
        { "name": "Red", "slug": "red", "color": "#c41e3a" },
        { "name": "Amber", "slug": "amber", "color": "#f59e0b" },
        { "name": "Text", "slug": "text", "color": "rgba(255, 255, 255, 0.92)" },
        { "name": "Text Muted", "slug": "text-muted", "color": "rgba(255, 255, 255, 0.70)" },
        { "name": "Border", "slug": "border", "color": "rgba(255, 255, 255, 0.14)" },
        { "name": "Stone", "slug": "stone", "color": "rgba(255, 255, 255, 0.70)" },
        { "name": "Vermillion", "slug": "vermillion", "color": "#c40000" }
      ]
    },
    "spacing": {
      "spacingSizes": [
        { "name": "4", "slug": "xs", "size": "4px" },
        { "name": "8", "slug": "sm", "size": "8px" },
        { "name": "16", "slug": "md", "size": "16px" },
        { "name": "24", "slug": "lg", "size": "24px" },
        { "name": "32", "slug": "xl", "size": "32px" },
        { "name": "48", "slug": "2xl", "size": "48px" },
        { "name": "64", "slug": "3xl", "size": "64px" }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "name": "Institutional Serif",
          "slug": "institutional-serif",
          "fontFamily": "\"Noto Serif JP\", \"Source Serif 4\", Georgia, serif"
        },
        {
          "name": "Modern Sans",
          "slug": "modern-sans",
          "fontFamily": "\"Inter\", \"Noto Sans JP\", -apple-system, BlinkMacSystemFont, \"Segoe UI\", sans-serif"
        }
      ],
      "fontSizes": [
        { "name": "Small", "slug": "small", "size": "0.9rem" },
        { "name": "Base", "slug": "base", "size": "1rem" },
        { "name": "Medium", "slug": "medium", "size": "1.125rem" },
        { "name": "Large", "slug": "large", "size": "1.5rem" },
        { "name": "XL", "slug": "xlarge", "size": "2rem" },
        { "name": "XXL", "slug": "xxlarge", "size": "2.75rem" }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--black)",
      "text": "var(--wp--preset--color--text)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--modern-sans)",
      "lineHeight": "1.7"
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--red)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--amber)"
          }
        }
      },
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--institutional-serif)",
          "lineHeight": "1.2"
        },
        "color": {
          "text": "var(--wp--preset--color--text)"
        }
      }
    },
    "blocks": {
      "core/paragraph": {
        "typography": {
          "lineHeight": "1.8"
        }
      },
      "core/button": {
        "color": {
          "text": "#ffffff",
          "background": "var(--wp--preset--color--red)"
        },
        "border": {
          "radius": "2px"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--modern-sans)",
          "fontWeight": "600",
          "textTransform": "uppercase",
          "letterSpacing": "0.08em"
        },
        "spacing": {
          "padding": {
            "top": "12px",
            "bottom": "12px",
            "left": "20px",
            "right": "20px"
          }
        }
      },
      "core/separator": {
        "color": {
          "background": "var(--wp--preset--color--border)"
        },
        "spacing": {
          "margin": {
            "top": "var(--wp--preset--spacing--lg)",
            "bottom": "var(--wp--preset--spacing--lg)"
          }
        }
      }
    }
  }
}
